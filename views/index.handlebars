<div class="jumbotron bg-secondary">
  <h1 class="display-4 text-center"><img src="/assets/img/PinClipart.com_eat-healthy-clip-art_695168.jpg"
      alt="burger-clip-art" height="100" width="100"> Burgers Baby! <img
      src="/assets/img/PinClipart.com_eat-healthy-clip-art_695168.jpg" alt="burger-clip-art" height="100" width="100">
  </h1>
  <hr class="m-4">

  <div class="container text-center">
    <div class="row">
      <div class="col-lg-6">
        <h4>Burgers on the MENU 📝</h4>
        <hr class="m-4">

        <ul>
          {{#each burgers}}
          {{#unless devour}}
          {{> burgers/burger-block ate=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-lg-6">
        <h4>Burgers you have DEVOURED 🍽</h4>
        <hr class="m-4">

        <ul>
          {{#each burgers}}
          {{#if devour}}
          {{> burgers/burger-block ate=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <hr class="m-4">

  <div class="container text-center mgTop">
    <h2>Add a Burger 🍔</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>
      <button type="submit" class="btn btn-danger">Add Burger to the Menu</button>
    </form>
  </div>